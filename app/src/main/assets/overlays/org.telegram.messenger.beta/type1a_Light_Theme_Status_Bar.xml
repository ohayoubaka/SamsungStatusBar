<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.TMessages" parent="@*android:style/Theme.Material.Light">
        <item name="android:colorBackground">@*android:color/white</item>
        <item name="android:windowBackground">@*android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@*org.telegram.messenger:style/Theme.TMessages.ListView</item>
        <item name="android:itemTextAppearance">@*org.telegram.messenger:style/ActionBar.Transparent.TMessages.Item</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:listChoiceBackgroundIndicator">@*org.telegram.messenger:drawable/list_selector_ex</item>
        <item name="android:alertDialogTheme">@*org.telegram.messenger:style/Theme.TMessages.Dialog.Alert</item>
        <item name="android:datePickerStyle">@*org.telegram.messenger:style/Theme.TMessages.DatePicker</item>
        <item name="android:calendarViewStyle">@*org.telegram.messenger:style/Theme.TMessages.CalendarView</item>
        <item name="android:actionBarItemBackground">@*org.telegram.messenger:drawable/bar_selector_style</item>
        <item name="android:colorControlActivated">#ff4991cc</item>
        <item name="android:colorPrimary">#ff527da3</item>
        <item name="android:colorPrimaryDark">#17000000</item>
        <item name="android:navigationBarColor">#ff000000</item>
        <item name="android:timePickerStyle">@*org.telegram.messenger:style/Theme.TMessages.TimePicker</item>
        <item name="android:timePickerDialogTheme">@*org.telegram.messenger:style/Theme.TMessages.Dialog.Alert</item>
        <item name="android:datePickerDialogTheme">@*org.telegram.messenger:style/Theme.TMessages.Dialog.Alert</item>
		<item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
